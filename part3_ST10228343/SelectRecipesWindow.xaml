<Window x:Class="part3_ST10228343.SelectRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:part3_ST10228343" xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="SelectRecipesWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10">
            <TextBlock Text="Select Recipes:"/>
            <ListBox x:Name="RecipesListBox" SelectionMode="Multiple" Height="200" Margin="0,0,0,10"/>
        </StackPanel>

        <oxy:PlotView x:Name="PieChart" Grid.Row="1" Model="{Binding PieChartModel}" Margin="10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Show Pie Chart" Click="ShowPieChartButton_Click" Margin="5"/>
            <Button Content="Cancel" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
